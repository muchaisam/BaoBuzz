<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="18dp"
    android:elevation="5dp"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transferFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/highlightColor"
            android:layout_marginStart="50dp"
            android:text="$50M"
            android:layout_margin="8dp"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transferDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/successColor"
            android:layout_below="@id/transferFee"
            android:layout_marginStart="50dp"
            android:text="12-09-2024"
            android:layout_margin="8dp"
            android:textSize="19sp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/playertoTeam"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/pl"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playertoTeam"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"
            android:text="Manuel Ugarte"
            android:layout_margin="8dp"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fromTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerName"
            android:layout_marginStart="50dp"
            android:text="PSG"
            android:layout_margin="8dp"
            android:textSize="19sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:rotation="180"
            android:layout_below="@id/playerName"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/toTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerName"
            android:layout_alignParentEnd="true"
            android:text="Manchester United"
            android:textColor="@color/secondaryColor"
            android:layout_margin="8dp"
            android:textSize="19sp"
            android:textStyle="bold" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>